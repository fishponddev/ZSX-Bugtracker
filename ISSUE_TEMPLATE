name: Bug/Issue report
about: Report a bug or issue with the plugin(s)
title: "[BUG/ISSUE] "
labels: bug

body:
  - type: input
    id: description
    attributes:
      label: Describe the bug
      placeholder: Provide a clear and concise description of the issue.
      required: true

  - type: input
    id: steps
    attributes:
      label: Steps to reproduce
      placeholder: List the steps to reproduce the issue.
      required: true

  - type: input
    id: expected
    attributes:
      label: Expected behavior
      placeholder: What did you expect to happen?
      required: true

  - type: input
    id: actual
    attributes:
      label: Actual behavior
      placeholder: What actually happened?
      required: true

  - type: input
    id: versions
    attributes:
      label: Versions (plugin, bot, dependencies)
      placeholder: E.g. plugin v1.2.3, BBB bot vX.Y.Z, etc.
      required: true

  - type: textarea
    id: additional
    attributes:
      label: Additional context
      placeholder: Add any other context, logs, or screenshots that may help.
